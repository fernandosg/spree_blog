<div class="row">
  <div data-hook="admin_articles_form_title">
    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title, Spree.t(:title), class: 'required' %>
      <%= f.text_field :title, class:'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>

  <div data-hook="admin_articles_form_body">
    <%= f.field_container :body, class: ["form-group"] do %>
      <%= f.label :body, Spree.t(:body), class: 'required' %>
      <%= f.text_area :body, {rows: '10', cols:"10", class:'form-control'} %>
      <%= f.error_message_on :body %>
    <% end %>
  </div>

  <div data-hook="admin_articles_form_category">
    <%= f.field_container :article_categories, class: ["form-group"] do %>
      <%= f.label :article_category_id, Spree.t(:article_category), class: 'required' %>
      <%= f.collection_select(:article_category_id, @article_categories, :id, :name, {included_blank: Spree.t(:select_article_category_blank)}) %>
    <% end %>
  </div>
</div>
