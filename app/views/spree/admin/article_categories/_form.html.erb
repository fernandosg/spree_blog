<div class="row">
  <div data-hook="admin_articles_form_title">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name), class: 'required' %>
      <%= f.text_field :name, class:'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>

  <div data-hook="admin_articles_form_body">
    <%= f.field_container :description, class: ["form-group"] do %>
      <%= f.label :description, Spree.t(:description), class: 'required' %>
      <%= f.text_area :description, {rows: '10', cols:"10", class:'form-control'} %>
      <%= f.error_message_on :description %>
    <% end %>
  </div>
</div>
